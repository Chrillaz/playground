{
    "extends": "../tsconfig.base.json",
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "incremental": true,
        "isolatedModules": false,
        "baseUrl": "src",
        "jsx": "react",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "module": "ESNext",
        "outDir": "./dist",
        "paths": {
            "@components": [
                "components/index"
            ],
            "@routes/*": [
                "routes/*"
            ]
        },
        "rootDir": "src",
        "sourceMap": true,
    },
    "include": [
        "src/**/*"
    ]
}