{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "rootDir": "src",
        "baseUrl": "src",
        "lib": [
            "ESNext"
        ],
        "module": "commonjs",
        "paths": {
            "@controllers/*": [
                "controllers/*"
            ],
            "@models/*": [
                "models/*"
            ],
            "@routes/*": [
                "routes/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}