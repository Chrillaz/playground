{
    "root": true,
    "env": {
        "node": true,
        "es6": true
    },
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "prettier",
        "@typescript-eslint"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended",
        "prettier"
    ],
    "rules": {
        "prettier/prettier": "error",
        "block-spacing": "error",
        "keyword-spacing": [
            "error",
            {
                "before": true
            }
        ],
        "no-prototype-builtins": 1,
        "padding-line-between-statements": [
            "error",
            {
                "blankLine": "always",
                "prev": "*",
                "next": "return"
            }
        ],
        "sort-imports": "error",
        "sort-keys": "error"
    }
}